
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center mb-4">Contact Us</h1>

      <p> We would love to hear from you! Any feedback is welcome feedback. </p>

      <%= form_with url: '/contact', method: :post, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :message %>
          <%= f.text_area :message, rows: 5, class: 'form-control' %>
        </div>

        <div class="form-group text-center">
          <%= f.submit 'Send Message', class: 'btn btn-lrg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

